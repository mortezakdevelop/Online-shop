<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OnlineShopApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/eerieBlack</item>
    </style>

    <style name="Theme.OnlineShopApplication" parent="Base.Theme.OnlineShopApplication" />

    <style name="ButtonNavigationViewFont" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_7font_mdp</item>
        <item name="fontFamily">@font/iransans</item>
    </style>

    <style name="ColoredShadowDark">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/royalBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/royalBlue</item>
    </style>

    <style name="ColoredShadowLight">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/cornflowerBlue</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DarkProgressbar">
        <item name="colorAccent">@color/darkStrategy</item>
    </style>

 <style name="SalmonProgressbar">
        <item name="colorAccent">@color/salmon</item>
    </style>

</resources>